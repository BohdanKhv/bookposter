<div class="row justify-content-center">
    <div class="col-sm-10 col-12">
        <h2 class="mb-4">Recently Added</h2>
        <hr>
        <div class="row">
            <% books.forEach(book => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 my-2">
                    <div class="card">
                        <a href="/books/<%= book.id %>">
                            <img src="<%= book.coverImagePath %>" class="card-img-top" height="150" style="object-fit: cover;"/>
                        </a>
                        <div class="card-body">
                            <a href="/books/<%= book.id %>" class="card-title link-dark fs-4"><%= book.title.charAt(0).toUpperCase() + book.title.slice(1) %></a>
                        </div>
                        <div class="d-flex justify-content-center mx-1 my-2">
                            <a href="/books/<%= book.id %>/edit" class="btn btn-warning me-1 w-100 btn-sm">Edit</a>
                            <%- include('partials/deleteButton', { url: `books/${book.id}` }) %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>