<div class="row">
    <h1 class="col-12 card-title"><%= book.title.charAt(0).toUpperCase() + book.title.slice(1) %></h1>
    <div class="col-md-5 mb-5">
        <img src="<%= book.coverImagePath %>" class="rounded img-fluid" style="object-fit: cover;">
        <div class="d-flex justify-content-center my-2">
            <a href="/books/<%= book.id %>/edit" class="btn btn-sm btn-warning me-2 w-100">Edit</a>
            <%- include('../partials/deleteButton.ejs', { url: `/books/${ book.id}` }) %>
        </div>
        <a href="/authors/<%= book.author.id %>" class="btn btn-info btn-sm w-100">View Author</a>
    </div>
    <div class="col-md-7">
        <div class="table-responsive">
            <table class="table align-middle">
                <tbody>
                    <tr>
                        <th scope="row">Author:</th>
                        <td><%= book.author.name %></td>
                    </tr>
                    <tr>
                        <th scope="row">Publish Date:</th>
                        <td><%= book.publishDate.toDateString() %></td>
                    </tr>
                    <tr>
                        <th scope="row">Page Count:</th>
                        <td><%= book.pageCount %></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <h6 class="mt-3">Description: </h6>
        <p class="lead ms-3">
            - <%= book.description %>
        </p>
    </div>
</div>