<div class="row justify-content-center">
    <div class="col-6">
        <h3>Search Authors</h3>
        <form action="authors" method="GET">
            <label class="form-label">Name</label>
            <input type="text" name="name" class="form-control" value="<%= locals.searchOptions.name %>" />
            <div class="row justify-content-end my-3">
                <input type="submit" value="Search" class="btn btn-primary col-4 mx-3"> 
            </div>
        </form>
    </div>
</div>
<br/>
<div class="row justify-content-center">
    <% authors.forEach(author => { %>
        <div class="col-12 col-md-7 my-2 d-flex align-items-center">
            <h6 class="align-items-center m-0"><%= author.name %></h6>
        </div>
        <div class="row col-12 col-md-5 justify-content-between my-2">
            <button class="btn btn-primary btn-sm col-3">View</button>
            <button class="btn btn-warning btn-sm col-3">Edit</button>
            <button class="btn btn-danger btn-sm col-3">Delete</button>
        </div>
    <% }) %>
</div>