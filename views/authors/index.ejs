<div class="row justify-content-center">
    <div class="col-12">
        <h3>Search Authors</h3>
        <form action="authors" method="GET">
            <label class="form-label ms-2">Name</label>
            <input type="text" name="name" class="form-control w-100" value="<%= locals.searchOptions.name %>" />
            <input type="submit" value="Search" class="btn btn-primary mx-0 w-100 my-3"> 
        </form>
    </div>
</div>
<br/>
<table class="table table-striped table-hover align-middle">
    <thead>
        <tr class="table-active">
            <th scope="col">â„–</th>
            <th scope="col">Author</th>
            <th scope="col" class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% authors.forEach((author, index) => { %>
            <tr class="justify-content-center">
                <th scope="row">
                    <%= index + 1 %>
                </th>
                <td>
                    <a href="/authors/<%= author.id %>"><%= author.name %></a>
                </td>
                <td class="d-flex justify-content-end">
                    <a href="/authors/<%= author.id %>/edit" class="btn btn-sm text-end btn-warning me-2">Edit</a>
                    <%- include('../partials/deleteButton.ejs', { url: `/authors/${ author.id}` }) %>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>